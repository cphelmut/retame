<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.asus.retamev2.registrarNoticiaAdministrador"
    tools:showIn="@layout/activity_registrar_noticia_administrador">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/LNY_ImagenNoticia_ATVRegistrarNoticiaAdministrador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/IMV_ImagenNoticia_ATVRegistrarNoticiaAdministrador"
                android:layout_width="match_parent"
                android:layout_height="@dimen/album_cover_height" />
            <Button
                android:id="@+id/BTN_AbrirGaleria_ATVRegistrarNoticiaAdministrador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/IMV_ImagenNoticia_ATVRegistrarNoticiaAdministrador"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LNY_InformacionNoticia_ATVRegistrarNoticiaAdministrador"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_below="@+id/LNY_ImagenNoticia_ATVRegistrarNoticiaAdministrador">

            <EditText
                android:id="@+id/EDT_NombreNoticia_ATVRegistrarNoticiaAdministrador"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="50dp" />

            <EditText
                android:id="@+id/EDT_DescripcionNoticia_ATVRegistrarNoticiaAdministrador"
                android:layout_width="match_parent"
                android:layout_below="@id/EDT_NombreNoticia_ATVRegistrarNoticiaAdministrador"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/EDT_URLNoticia_ATVRegistrarNoticiaAdministrador"
                android:layout_width="match_parent"
                android:layout_below="@id/EDT_DescripcionNoticia_ATVRegistrarNoticiaAdministrador"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LNY_SeleccionarTipoInformacion_ATVRegistrarNoticiaAdministrador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LNY_InformacionNoticia_ATVRegistrarNoticiaAdministrador"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/SPN_SeleccionarCategoria_ATVRegistrarNoticiaAdministrador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/SPN_SeleccionarTema_ATVRegistrarNoticiaAdministrador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/SPN_SeleccionarTipo_ATVRegistrarNoticiaAdministrador"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LNY_ButtonRegistrarNoticia_ATVRegistrarNoticiaAdministrador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LNY_SeleccionarTipoInformacion_ATVRegistrarNoticiaAdministrador">
            <Button
                android:id="@+id/BTN_RegistrarNoticia_ATVRegistrarNoticiaAdministrador"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Registrar"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
