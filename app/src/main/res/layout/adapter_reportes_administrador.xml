<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/DML_MargenFragPpal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DML_AltoCabezalFragPpal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:layout_marginLeft="@dimen/DML_MargenFragPpal" android:layout_marginStart="@dimen/DML_MargenFragPpal">
                <TextView
                    android:id="@+id/TXV_NombreReporte_AdapterReportesAdministrador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Text"
                    android:textSize="@dimen/DML_NombreNoticiaHeighFragPpal"
                    android:layout_toLeftOf="@+id/imageButton"
                    android:textStyle="bold"
                    android:layout_gravity="left|center_vertical" android:layout_toStartOf="@+id/imageButton" />
                <RelativeLayout
                    android:id="@+id/RLY_InformacionReporte_AdapterReportesAdministrador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TXV_NombreReporte_AdapterReportesAdministrador">

                    <TextView
                        android:id="@+id/TXV_FechaReporte_AdapterReportesAdministrador"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical" />
                    <TextView
                        android:id="@+id/TXV_Seperacion_AdapterReportesAdministrador"
                        android:text="@string/sep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_toRightOf="@+id/TXV_FechaReporte_AdapterReportesAdministrador"/>

                    <TextView
                        android:id="@+id/TXV_Estado_AdapterReportesAdministrador"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_below="@+id/TXV_Nombre_Noticias_NoticiasAdapter"
                        android:layout_toRightOf="@+id/TXV_Seperacion_AdapterReportesAdministrador"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/TXV_NombreNoticia_AdapterReportesAdministrador"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:linksClickable="true"
            android:paddingBottom="@dimen/DML_PaddingBottomFragPpal"
            android:paddingLeft="@dimen/DML_PaddingFragPpal"
            android:paddingRight="@dimen/DML_PaddingFragPpal"
            android:textColorLink="@color/colorAccent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/RLY_Descripcion_AdapterReportesAdministrador"
                android:layout_width="320dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/TXV_NombreUsuario_AdapterReportesAdministrador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/TXV_DescripcionReporte_AdapterReportesAdministrador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/DML_MargenFragPpal"
                    android:textColor="@color/Text"
                    android:focusable="false"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/DML_PaddingFragPpal"
            android:layout_below ="@+id/LY_Image_Pub_Adapter"
            android:paddingRight="@dimen/DML_PaddingFragPpal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"/>

            <ImageView
                android:id="@+id/imageLike"
                android:layout_width="@dimen/DML_AltoLargoImagenLikeFragPpal"
                android:layout_height="@dimen/DML_AltoLargoImagenLikeFragPpal"
                android:scaleType="fitCenter">
            </ImageView>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
