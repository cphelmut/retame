<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.retamev2.usuarioAdministrador"
    android:orientation="vertical">

  <LinearLayout
        android:id="@+id/LNY_BusquedaUsuario_FRGUsuarioAdministrador"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <android.support.v7.widget.SearchView
            android:id="@+id/SCV_BuscarUsuario_FRGUsuarioAdministrador"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="15"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/LNY_BusquedaUsuario_FRGUsuarioAdministrador">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/RCV_ListarUsuarios_FRGUsuarioAdministrador"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

</LinearLayout>
