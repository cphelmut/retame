<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/RLY_RecyclerTemas_FRGNoticiasP"
            android:layout_width="match_parent"
            android:layout_height="@dimen/backdrop_title">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_fragment"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_cardview"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/RLY_RecyclerNoticiasP_FRGNoticiasP"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/RLY_RecyclerTemas_FRGNoticiasP">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/RCV_NoticiasR_FRGNoticiasP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </RelativeLayout>

    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>