<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/DML_MargenFragPpal"
        android:background="@drawable/esquinas_redondas"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DML_AltoCabezalFragPpal"
            android:layout_margin="@dimen/DML_MargenATVCargarOtros" >


            <TextView
                android:id="@+id/TXV_Nombre_Noticia_AdapterCargarTema"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/Text"
                android:textSize="@dimen/DML_NombreNoticiaHeighFragPpal"
                android:layout_toLeftOf="@+id/imageButton"
                android:textStyle="bold"
                android:layout_gravity="left|center_vertical"
                android:layout_weight="15"/>

            <ImageButton
                android:id="@+id/IMV_Opciones_AdapterCargarTema"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:layout_toRightOf="@+id/nombre_publicacion"
                android:background="@null"
                android:layout_gravity="right"
                android:layout_weight="2" />
        </LinearLayout>



        <TextView
            android:id="@+id/TXV_DescripcionNoticia_AdapterCargarTema"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/DML_PaddingBottomFragPpal"
            android:paddingLeft="@dimen/DML_PaddingFragPpal"
            android:paddingRight="@dimen/DML_PaddingFragPpal"
            android:paddingTop="@dimen/DML_PaddingTopFragPpal"
            android:textColor="@color/Text"
            android:focusable="false" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/IMV_Formula_AdapterCargarTema"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/DML_PaddingFragPpal"
            android:layout_below ="@+id/LY_Image_Pub_Adapter"
            android:paddingRight="@dimen/DML_PaddingFragPpal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                >
                <TextView
                    android:id="@+id/BTN_AbrirNoticia_AdapterCargarTema"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:text="Ver el tema"
                    android:textSize="20dp"
                    />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imageLike_AdapterCargarTema"
                android:layout_width="@dimen/DML_AltoLargoImagenLikeFragPpal"
                android:layout_height="@dimen/DML_AltoLargoImagenLikeFragPpal"
                android:scaleType="fitCenter"
                android:src="@drawable/analisisindex"
                android:layout_weight="1"
               >
            </ImageView>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
